{
  "name": "kids-alarm-clock",
  "version": "0.1.0",
  "description": "Raspberry Pi-based multimedia alarm clock for kids",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:renderer && npm run build:portal && npm run build:electron",
    "build:renderer": "vite build",
    "build:portal": "vite build --config vite.portal.config.ts",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start": "NODE_ENV=production electron .",
    "preview": "vite preview",
    "postinstall": "electron-rebuild -f -w better-sqlite3 || true"
  },
  "keywords": [
    "alarm-clock",
    "raspberry-pi",
    "electron",
    "kids"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.1",
    "ws": "^8.19.0"
  }
}
